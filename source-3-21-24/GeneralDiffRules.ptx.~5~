  %     </p>
  %   </introduction>
  %   <exercise>
  %     <statement>
  %       <p><m>y=1</m></p>
  %     </statement>
  %     <answer>
  %       <p>
  %         <m>\dx{y}=0</m>
  %       </p>
  %     </answer>
  %   </exercise>
  %   <exercise>
  %     <statement>
  %       <p>
  %         <m>
  %           y=\pi
  %         </m>
  %       </p>
  %     </statement>
  %     <answer>
  %       <p>
  %         <m>\dx{y}=0</m>
  %       </p>
  %     </answer>
  %   </exercise>
  %   <exercise>
  %     <statement>
  %       <p>
  %         <m>
  %           y=\pi^3
  %         </m>
  %       </p>
  %     </statement>
  %     <answer>
  %       <p>
  %         <m>\dx{y}=0</m>
  %       </p>
  %     </answer>
  %   </exercise>
  %   <exercise>
  %     <statement>
  %       <p>
  %         <m>
