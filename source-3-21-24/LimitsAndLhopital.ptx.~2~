<!--   Compute each of the following limits. Read the notation -->
<!--   carefully. -->
<!--   \begin{enumerate}[label={  (\alph*)}] -->
<!--     \item $\rtlimit{x}{3}{\frac{1}{(x-1)(x-3)}}$ -->
<!--     \item $\rtlimit{x}{1}{\frac{1}{(x-1)(x-3)}}$ -->
<!--     \item $\rtlimit{x}{\frac{\pi}{2}}{\tan(x)}$ -->
<!--   \end{enumerate} -->
<!-- \end{ProficiencyDrill} -->


