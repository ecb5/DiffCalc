<!-- <!-\-   carefully. -\-> -->
<!-- <!-\-   \begin{enumerate}[label={  (\alph*)}] -\-> -->
<!-- <!-\-     \item <m>\rtlimit{x}{3}{\frac{1}{(x-1)(x-3)}}</m> -\-> -->
<!-- <!-\-     \item <m>\rtlimit{x}{1}{\frac{1}{(x-1)(x-3)}}</m> -\-> -->
<!-- <!-\-     \item <m>\rtlimit{x}{\frac{\pi}{2}}{\tan(x)}</m> -\-> -->
<!-- <!-\-   \end{enumerate} -\-> -->
<!-- <!-\- \end{ProficiencyDrill} -\-> -->


