<!-- <p> -->
<!--  <m>f(x)=\ln(x)</m> <m>g(x)=x^{4/5}</m> -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Based on the limits above write down a general conclusion -->
<!--     about the rate of change of the natural logarithm as compared -->
<!--     to roots. -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Prove that your statement is correct. -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- </problem> -->
<!-- <!-\- <problem xml:id="no-label"> -->
<!-- <introduction> -->
<!-- <p> -->
<!-- <!-\-   Use L'H\^{o}pital's Rule to determine which of the following -\-> -->
<!-- <!-\-   pairs of functions are growing faster as <m>x\rightarrow\infty</m>. -\-> -->
<!-- </p> -->
<!-- </introduction> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)=\ln(x)</m> <m>g(x)=x</m> -\-> -->
<!-- <!-\-     </p> -->
<!-- </statement> -->
<!-- </task> -->
