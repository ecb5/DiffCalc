<!-- <!-\- <!-\\-   Find all vertical asymptotes of the graphs of each of the -\\-> -\-> -->
<!-- <!-\- <!-\\-   following functions. -\\-> -\-> -->
<!-- <!-\- <!-\\-   \begin{enumerate}[label={  (\alph*)}] -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \frac{1}{x^2-1}</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \frac{1}{(x^2-1)^2}</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \frac{x-1}{x^2-4}</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \frac{x-7}{x^2-5}</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \tan(x)</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-     \item <m>f(x)= \sec(x)</m> -\\-> -\-> -->
<!-- <!-\- <!-\\-   \end{enumerate} -\\-> -\-> -->
<!-- <!-\- <!-\\- \end{embeddedproblem} -\\-> -\-> -->





<!-- </section> -->
<!-- <section xml:id="sec:more-indet-forms"> -->
<!-- <title>Indeterminate Forms and L'H\^o pital's Rule</title> -->

<!-- <!-\- \label{sec:more-indet-forms} -\-> -->
<!-- <p> -->
<!-- Based -->
<!-- on our experience so far it is tempting to conclude that we can locate -->
<!-- vertical asymptotes by simply  setting the denominator equal to zero -->
<!-- and solving.  But this is a naive conclusion as we will see next. -->
<!-- </p> -->

<!-- <example xml:id="example:VertAsymp"> -->
<!-- <title>4</title> -->
<!-- <p> -->
<!--   <!-\- \label{example:VertAsymp} -\-> -->
<!--   Consider <m>y=\frac{x-2}{x^2-4}</m>.  Setting the denominator equal to -->
<!--   zero yields <m>x=-2</m> and <m>x=2</m>, but only one of these is a vertical -->
<!--   asymptote. Do you see which one? -->

<!--   Let's take a careful look at this example.  By -->
<!--   <xref ref="DEFVerticalAsymptotes">Definition~\</xref> we will have a vertical -->
<!--   asymptote when either one-sided limit of a function increases or -->
<!--   decreases without bound, so we must evaluate each one-sided limit. -->

<!--   For <m>x=-2</m>, we have -->
<!-- <me> -->
<!-- \limitX{x}{-2}{\frac{x-2}{x^2-4}}{x\gt -2} -->
<!-- =\limitX{x}{-2}{\frac{x-2}{(x-2)(x+2)}}{x\gt -2} -->
<!-- =\limitX{x}{-2}{\cancelto{=1}{\left(\frac{x-2}{x-2}\right)}}{x\gt -2}\,\,\cdot\,\,\limitX{x}{-2}{\frac{1}{x+2}}{x\gt -2} -->
<!-- = 1\cdot\frac{1}{\approach{0}} =\infty -->
<!-- </me> -->
<!-- So the line <m>x=-2</m> is indeed a vertical asymptote. -->

<!-- <exercise xml:id="no-label"> -->
<!-- <statement> -->
<!-- <p> -->
<!--   Explain how you know the limit above is not <m>-\infty</m>. -->
<!-- </p> -->
<!-- </statement> -->
<!-- </exercise> -->

<!-- Similarly -->
<!-- <me> -->
<!-- \limitX{x}{-2}{\frac{x-2}{x^2-4}}{x\lt -2} -->
<!-- =\limitX{x}{-2}{\frac{x-2}{(x-2)(x+2)}}{x\lt -2} -->
<!-- =\limitX{x}{-2}{\cancelto{=1}{\left(\frac{x-2}{x-2}\right)}}{x\lt -2}\,\,\cdot\,\,\limitX{x}{-2}{\frac{1}{x+2}}{x\lt -2} -->
<!-- = 1\cdot\frac{1}{\approach{0}}=-\infty. -->
<!-- </me> -->


<!-- <exercise xml:id="no-label"> -->
<!-- <statement> -->
<!-- <p> -->
<!--   Explain how you know the limit above is not <m>\infty</m>. -->
<!-- </p> -->
<!-- </statement> -->
<!-- </exercise> -->
<!-- We were careful to use one-sided limits to find the vertical asymptote -->
<!-- at <m>x= -2</m> because this is what -->
<!-- <xref ref="DEFVerticalAsymptotes">Definition~\</xref> calls for. Strictly speaking -->
<!-- we only needed one of them, but since these limits were not equal we -->
<!-- evaluated them both. -->

<!-- However, for <m>x=2</m>, both one-sided limits are the same so we have -->
<!-- <me> -->
<!-- \limit{x}{2}{\frac{x-2}{x^2-4}}=\limit{x}{2}{\frac{x-2}{(x-2)(x+2)}} -->
<!-- =\cancelto{=1}{\left(\limit{x}{2}{\frac{x-2}{x-2}}\right)}\,\,\cdot\,\,\left(\limit{x}{2}{\frac{1}{x+2}}\right) -->
<!-- =\approach{1}\cdot\approach{\frac14}=\frac{1}{4}. -->
<!-- </me> -->

<!-- <exercise xml:id="no-label"> -->
<!-- <statement> -->
<!-- <p> -->
<!--   Confirm <m>\tlimitX{x}{2}{\frac{x-2}{x^2-4}}{x\gt2}=\frac14</m> and -->
<!--   <m>\tlimitX{x}{2}{\frac{x-2}{x^2-4}}{x\lt2}=\frac14</m>. -->
<!-- </p> -->
<!-- </statement> -->
<!-- </exercise> -->

<!-- Observe that this limit has the form -->
<!-- <m>\limit{x}{2}{\frac{x-2}{x^2-4}}=\frac{\approach{0}}{\approach{0}}</m>. -->
<!-- A limit of this form is called an <term>Indeterminate -->
<!--   Form</term>\aside{There are other kinds of Indeterminate Forms. We will -->
<!--   encounter them later in this chapter.}.%  This simply means that we -->



<!-- <problem xml:id="problem:vertical-asymptotes"> -->
<!-- <introduction> -->
<!-- <p> -->
<!--   <!-\- \label{problem:vertical-asymptotes} -\-> -->
<!--   Find all vertical asymptotes of the graphs of each of the following -->
<!--   functions. -->
<!-- </p> -->
<!-- </introduction> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x+2}{x^2-4}</m> -->
<!--     </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x-2}{x^2-4}</m> -->
<!--     </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x-2}{x^2-5x+6}</m> -->
<!--     </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x-3}{x^2-5x+6}</m> -->
<!--     </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x}{x^3-1}</m> -->
<!--     </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  <m>f(x)= \frac{x^2-x}{x^4-1}</m> -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- </problem> -->
<!-- <!-\- \begin{embeddedproblem} -\-> -->
<!-- <!-\-   <!-\\- \label{problem:vertical-asymptotes} -\\-> -\-> -->
<!-- <!-\-   Find all vertical asymptotes of the graphs of each of the following -\-> -->
<!-- <!-\-   functions. -\-> -->
<!-- <!-\-   \begin{enumerate}[label={  (\alph*)}] -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x+2}{x^2-4}</m> -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x-2}{x^2-4}</m> -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x-2}{x^2-5x+6}</m> -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x-3}{x^2-5x+6}</m> -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x}{x^3-1}</m> -\-> -->
<!-- <!-\-     \item <m>f(x)= \frac{x^2-x}{x^4-1}</m> -\-> -->
<!-- <!-\-   \end{enumerate} -\-> -->
<!-- <!-\- \end{embeddedproblem} -\-> -->

<!-- This example demonstrates that there is a difference between a -->
<!-- function which does not exist at a point and a function with a -->
<!-- vertical asymptote at a point. Notice that <m>g(x)=\frac{x-2}{x^2-4}</m> is -->
<!-- undefined at both <m>x=2</m> and <m>x=-2</m>, but it only has an asymptote at -->
<!-- <m>x=-2</m>. -->

<!-- It also displays something subtle about limits.  One would be tempted -->
<!-- to say that -->
<!-- <me> -->
<!-- \frac{x-2}{x^2-4}=\frac{x-2}{(x-2)(x+2)}=\frac{1}{x+2}, -->
<!-- </me> -->
<!-- and this is true when <m>x\neq2</m>.   However, if we graph the two -->
<!-- functions, <m>g(x)=\frac{x-2}{x^2-4}</m>  and <m>f(x)=\frac{1}{x+2}</m> we see -->
<!-- that there is a small difference between them\aside{This discussion is -->
<!-- also a cautionary tale about the use of graphing technology. These two -->
<!-- graphs will appear to be identical if you use technology to graph -->
<!-- them.}: -->
<!-- \vskip2mm -->

<!-- <image source="images/lhopital2.png" width="60%" /> -->
<!-- <!-\- \centerline{\includegraphics*[height=2.4in,width=5.4in]{../Figures/lhopital2}} -\-> -->
<!-- \vskip2mm -->
<!-- Do you see the difference?  The value of <m>g(2)</m> is not defined because -->
<!-- <m>g(2)=\frac{2-2}{4-4}</m> and we get a zero denominator. But no such -->
<!-- difficulty occurs with <m>f</m> because <m>f(2) = \frac{1}{2+2}=\frac14</m>. -->

<!-- So, when <m>x\neq2</m>, <m>g(x)</m> and <m>f(x)</m> are the exactly the same. But -->
<!-- they disagree when <m>x=2</m>. More precisely <m>x=2</m> is not in the domain of -->
<!-- <m>g(x)</m> but it is in the domain of <m>f(x)</m>. Since the domains differ -->
<!-- they must be different functions and  it is incorrect to write -->
<!-- <m>\frac{x-2}{x^2-4}=\frac{1}{x+2}</m> even though it is true for all but -->
<!-- one value of <m>x</m>. -->
<!-- </p> -->
<!-- </example> -->


<!-- <problem xml:id="problem:DiffSqLim"> -->
<!-- <introduction> -->
<!-- <p> -->
<!--   <!-\- \label{problem:DiffSqLim} -\-> -->
<!--   Suppose <m>a\neq0</m> is a real number. -->
<!-- </p> -->
<!-- </introduction> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Find all vertical asymptotes of -->
<!--     <m>f(x)=\frac{x-a}{x^2-a^2}</m>. -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Does your solution of part (a) still work when <m>a=0</m>? -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- </problem> -->
<!-- <!-\- <problem xml:id="problem:DiffSqLim"> -->
<!-- <introduction> -->
<!-- <p> -->
<!-- <!-\- <!-\\-   <!-\- \label{problem:DiffSqLim} -\-> -\\-> -\-> -->
<!-- <!-\-   Suppose <m>a\neq0</m> is a real number. -\-> -->
<!-- </p> -->
<!-- </introduction> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Find all vertical asymptotes of -\-> -->
<!-- <!-\-     <m>f(x)=\frac{x-a}{x^2-a^2}</m>. -\-> -->
<!-- <!-\-   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Does your solution of part (a) still work when <m>a=0</m>? -\-> -->
<!-- <!-\-   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- </problem> -->
<!-- <!-\- \begin{embeddedproblem} -\\-> -\-> -->
<!-- <!-\- <!-\\- <!-\-   <!-\\- \label{problem:DiffSqLim} -\\-> -\-> -\\-> -\-> -->
<!-- <!-\- <!-\\-   Suppose <m>a\neq0</m> is a real number. -\\-> -\-> -->
<!-- <!-\- <!-\\-     \begin{enumerate}[label={  (\alph*)}] -\\-> -\-> -->
<!-- <!-\- <!-\\-   \item Find all vertical asymptotes of -\\-> -\-> -->
<!-- <!-\- <!-\\-     <m>f(x)=\frac{x-a}{x^2-a^2}</m>. -\\-> -\-> -->
<!-- <!-\- <!-\\-   \item Does your solution of part (a) still work when <m>a=0</m>? -\\-> -\-> -->
<!-- <!-\- <!-\\-   \end{enumerate} -\\-> -\-> -->
<!-- <!-\- <!-\\- \end{embeddedproblem} -\\-> -\-> -->

<!-- <problem xml:id="problem:FoliumOfDescartes2"> -->
<!-- <introduction> -->
<!-- <p> -->
<!--   <!-\- <!-\\- \label{problem:FoliumOfDescartes2} -\\-> -\-> -->
<!--   Recall that in <xref ref="PROBLEMFoliumOfDescartes1">Problem~\</xref> in -->
<!--   <xref ref="SUBSECDerivative">Section</xref>  looked at the Folium of -->
<!--   Descartes from Newton's dynamic point of view. -->
