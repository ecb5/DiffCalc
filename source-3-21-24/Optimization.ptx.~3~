<!--     $$ -->
<!--     (k^2-1) x^4-20(k^2-1) x^3+101(k^2-1) x^2-20k^2 x+100k^2=0. -->
<!--     $$ -->
<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  When the formulas we're working with get this complicated it -->
<!--     is a good idea to check them against our intuition in simple -->
