<!--   </p> -->
<!-- </statement> -->
<!-- </task> -->
<!-- <task> -->
<!-- <statement> -->
<!-- <p> -->
<!--  Use any appropriate technology, or Newton's Method, to provide -->
<!--     approximate values for $x$ in the following table -->
