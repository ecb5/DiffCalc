 <mrow>
   \dx{y} \amp = \textcolor{blue}{(t^3-2t^2)}\textcolor{red}{\dx{(\cos(\theta)})}+\textcolor{red}{\cos(\theta)}\textcolor{blue}{\dx{(t^3-2t^2)}}
 </mrow>
