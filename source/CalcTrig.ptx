   \amp = \textcolor{blue}{(t^3-2t^2)}\textcolor{red}{(-\sin(t^2-t))(2t-1)\dx{t}} + \textcolor{blue}{\cos(t^2-t)(3t^2-4t)\dx{t}}
 </mrow>
