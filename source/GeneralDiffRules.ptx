        <!-- <!-\-   <!-\\- \label{example:BruteForce} -\\-> -\-> -->
        <!-- <!-\-   Suppose and we wish to find </m>\dx{y}<m> when </m>y=5(x^2+x)^3<m> One way to -\-> -->
        <!-- <!-\-   do this is simple brute force. That is, we compute -\-> -->
        <!-- <!-\-   \begin{align*} -\-> -->
        <!-- <!-\-     y=5\textcolor{red}{(x^2+x)^3} \amp = 5\textcolor{red}{(x^6+3x^5+3x^4+x^3)} -\-> -->
        <!-- <!-\-     = 5x^6+15x^5+15x^4+5x^3. -\-> -->
        <!-- <!-\-     \intertext{Applying the Sum Rule we see that} -\-> -->
        <!-- <!-\-     \dx y \amp = \dx \left(5x^6\right)+\dx \left(15x^5\right)+\dx -\-> -->
        <!-- <!-\-     \left(15x^4\right)+\dx \left(5x^3\right). -\-> -->
        <!-- <!-\-     \intertext{Next we use the -\-> -->
        <!-- <!-\-     Constant Multiple -\-> -->
        <!-- <!-\-     Rule, to get} -\-> -->
        <!-- <!-\-     \dx y \amp = 5\dx \left(x^6\right)+15\dx \left(x^5\right)+15\dx -\-> -->
        <!-- <!-\-     \left(x^4\right)+5\dx \left(x^3\right). -\-> -->
        <!-- <!-\-     \intertext{Finally, we use the Power Rule four times -\-> -->
