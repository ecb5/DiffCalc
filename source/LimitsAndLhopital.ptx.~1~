<!--   \begin{enumerate}[label={  (\alph*)}] -->
<!--     \item <m>  \limit{x}{\infty}{\frac{x^5+x^3}{5x^5-100x}} =\frac15</m> -->
<!--     \item <m>  \limit{x}{-\infty}{\frac{2x^5+x^3}{5x^5-x}} =\frac25</m> -->
