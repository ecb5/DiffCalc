    <!-- \begin{wrapfigure}[]{r}{2.4in} -->
    <!--     \vskip-10mm -->
    <!--       \captionsetup{labelformat=empty} -->
    <!--       \centerline{\includegraphics*[height=1.2in,width=2.4in]{../Figures/Descent2}} -->
    <!--       \label{fig:Descent2} -->
    <!--     \end{wrapfigure} -->
